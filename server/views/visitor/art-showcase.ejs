<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/art-showcase.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Art Showcase</title>
  </head>
  <body>
    <div id="page2">
      <div class="overlay"></div>
      <div class="dropdown-menu">
        <div class="container">
          <div class="map-title">
            <h1>Map</h1>
          </div>
          <div class="grid">
            <a href="/">
              <div class="mb-4">Main Hall</div>
            </a>
            <a href="">
              <div class="mb-4">Featured Collection</div>
            </a>
            <a href="">
              <div class="mb-4">Collection Name</div>
            </a>
            <a href="">
              <div class="mb-4">Information Desk</div>
            </a>
            <a href="">
              <div class="mb-4">Collection Name</div>
            </a>
            <a href="/personal-collection">
              <div class="mb-4">Personal Collection</div>
            </a>
          </div>
        </div>
      </div>

      <div class="toggle_btn">
        <div class="toggle">
          <span></span>
          <span></span>
        </div>
      </div>

      <div class="content">
        <div class="slide left" onclick="slideLeft()">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            fill="white"
            stroke="inherit"
            transform="rotate(180)"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M15.336 12L8.624 4.33l.752-.66L16.665 12l-7.289 8.33-.752-.66L15.336 12z"
            ></path>
          </svg>
        </div>
        <div class="slide right" onclick="slideRight()">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            fill="white"
            stroke="inherit"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M15.336 12L8.624 4.33l.752-.66L16.665 12l-7.289 8.33-.752-.66L15.336 12z"
            ></path>
          </svg>
        </div>

        <div class="slider-wrapper" draggable="false">
          <div class="slider">
            <% artworks.forEach((artwork) => { %>
            <div class="artwork">
              <a href="" draggable="false">
                <img
                  src="<%= artwork.image %>"
                  alt=""
                  draggable="false"
                  loading="lazy"
                />
              </a>
              <div class="information">
                <div class="information-header">
                  <div>
                    <div class="art-name"><%= artwork.title %></div>
                    <div class="artist"><%= artwork.artist %></div>
                  </div>

                  <div class="icons">
                    <i class="fa-solid fa-info info-icon"></i>

                    <% if (!isAuthenticated) { %>
                      <i class="far fa-heart heart-icon"></i>
                      <i class="far fa-bookmark bookmark-icon"></i>
                    <% } else { %>
                      <% if (artwork.likes.includes(user.sid)) { %>
                      <i class="far fa-heart heart-icon fa-solid"></i>
                      <% } else { %>
                      <i class="far fa-heart heart-icon"></i>
                      <% } %> <% if (artwork.bookmarks.includes(user.sid)) { %>
                      <i class="far fa-bookmark bookmark-icon fa-solid"></i>
                      <% } else { %>
                      <i class="far fa-bookmark bookmark-icon"></i>
                      <% } %>
                    <% } %>
                    <a href="/collection"
                      ><i class="fa-solid fa-box collection-icon"></i
                    ></a>
                  </div>
                </div>

                <div class="description"><%= artwork.description %></div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/art-showcase.js" defer></script>
  </body>
</html>
